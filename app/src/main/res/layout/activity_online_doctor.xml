<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.example.zsk.smb.OnlineDoctor">

    <LinearLayout
        android:id="@+id/linearlayout__1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_TitleBar">

        <ImageView
            android:id="@+id/return_arrow"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/return_arrow" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="在线医生"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:layout_gravity="center"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/linearlayout_1"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/doctor_imageview_1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/doctor_name_1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/doctor_imageview_1"
            android:gravity="center"
            android:text="XXX" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@+id/doctor_name_1"
            android:layout_toRightOf="@+id/doctor_name_1"
            android:text="成都第一人民医院" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativelayout_3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/relativelayout_2"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/doctor_imageview_2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/doctor_name_2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/doctor_imageview_2"
            android:gravity="center"
            android:text="XXX" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@+id/doctor_name_2"
            android:layout_toRightOf="@+id/doctor_name_2"
            android:text="四川大学华西医院" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/relativelayout_3"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/doctor_imageview_3"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/doctor_name_3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/doctor_imageview_3"
            android:gravity="center"
            android:text="XXX" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@+id/doctor_name_3"
            android:layout_toRightOf="@+id/doctor_name_3"
            android:text="四川大学华西第二医院" />

    </RelativeLayout>




</RelativeLayout>
