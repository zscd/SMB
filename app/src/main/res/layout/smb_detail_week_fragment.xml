<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/smb_homeactivity_scrollview">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/smb_week_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <com.example.zsk.smb.ByStagesView
                    android:id="@+id/smb_week_bs"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                </com.example.zsk.smb.ByStagesView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/smb_week_divider2"
                android:layout_below="@+id/smb_week_conditions"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:text="睡眠分期"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#999" />
                <TextView
                    android:layout_width="150dip"
                    android:layout_height="1dip"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv"
                    android:background="#999" />
                <TextView
                    android:layout_width="150dip"
                    android:layout_height="1dip"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv"
                    android:background="#999" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/linearlayout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/smb_week_divider2"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#999"
                    android:layout_marginTop="20dp"/>
                <LinearLayout
                    android:id="@+id/linearlayout_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:weightSum="1.0">

                    <TextView
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#999" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="入睡时间"
                        android:gravity="center"
                        android:layout_weight="0.25"/>
                    <TextView
                        android:layout_width="0.5dip"
                        android:layout_height="match_parent"
                        android:background="#999"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="醒来时间"
                        android:gravity="center"
                        android:layout_weight="0.25"/>
                    <TextView
                        android:layout_width="0.5dip"
                        android:layout_height="match_parent"
                        android:background="#999"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="深睡时长"
                        android:gravity="center"
                        android:layout_weight="0.25"/>
                    <TextView
                        android:layout_width="0.5dip"
                        android:layout_height="match_parent"
                        android:background="#999"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="浅睡时长"
                        android:gravity="center"
                        android:layout_weight="0.25"/>
                    <TextView
                        android:layout_width="0.5dip"
                        android:layout_height="match_parent"
                        android:background="#999"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearlayout_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#999" />
                    <TextView
                        android:id="@+id/time_start_sleep"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="22:00"
                        android:textColor="#6495ED"
                        android:gravity="center"
                        android:layout_weight="0.25" />
                    <TextView
                        android:layout_width="0.5dip"
                        android:layout_height="match_parent"
                        android:background="#999"/>
                    <TextView
                        android:id="@+id/time_end_sleep"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="07:00"
                        android:textColor="#6495ED"
                        android:gravity="center"
                        android:layout_weight="0.25" />
                    <TextView
                        android:layout_width="0.5dip"
                        android:layout_height="match_parent"
                        android:background="#999"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="5H36M"
                        android:textColor="#6495ED"
                        android:gravity="center"
                        android:layout_weight="0.25"/>
                    <TextView
                        android:layout_width="0.5dip"
                        android:layout_height="match_parent"
                        android:background="#999"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="2H24M"
                        android:textColor="#6495ED"
                        android:gravity="center"
                        android:layout_weight="0.25"/>
                    <TextView
                        android:layout_width="0.5dip"
                        android:layout_height="match_parent"
                        android:background="#999"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="#999"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/smb_week_divider3"
                android:layout_below="@+id/linearlayout_1"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:text="睡眠异常"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#999" />
                <TextView
                    android:layout_width="150dip"
                    android:layout_height="1dip"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv2"
                    android:background="#999" />
                <TextView
                    android:layout_width="150dip"
                    android:layout_height="1dip"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv2"
                    android:background="#999" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/smb_week_dangers"
                android:layout_below="@+id/smb_week_divider3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:minHeight="60dp">

                <ImageView
                    android:src="@drawable/danger"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/breath_danger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="呼吸暂停：1次"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/heartrate_danger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="心率异常：1次"
                        android:layout_weight="1"/>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>